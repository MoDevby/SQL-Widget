<Window x:Class="Sql_Widget.ResultWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Sql_Widget"
		
		TextElement.Foreground="{DynamicResource MaterialDesignBody}" Background="{DynamicResource MaterialDesignPaper}"
		FontFamily="{DynamicResource MaterialDesignFont}"
		Title="{Binding Title}">
	<Grid>
		<TextBlock Text="Loadding..." FontSize="30" HorizontalAlignment="Center" Visibility="{Binding Loadding,Mode=OneWay}"/>
		<DataGrid ItemsSource="{Binding Result}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsReadOnly="True"
				Visibility="{Binding NotLoadding,Mode=OneWay}" ClipboardCopyMode="ExcludeHeader"/>
	</Grid>
</Window>
